@using ArtberryApp.Models;
@inherits LayoutComponentBase

<div class="page">
    @if (!string.IsNullOrEmpty(Setting.Session))
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {


    protected override async Task OnInitializedAsync()
    {
        Setting.Session = await SecureStorage.GetAsync("session");
    }
}